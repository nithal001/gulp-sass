doctype html
html
	head
		title Demo App
		link(href='css/bootstrap/bootstrap.css', type='text/css', rel='stylesheet')
		link(href='css/style.css', type='text/css', rel='stylesheet')
		script(src='js/jquery-1.11.1.min.js')
		script(src='js/bootstrap.min.js')
	body
		<!--main content starts-->
		div.main
			<!--header starts-->
			header.global-header
				.container
					div.logo
						h1
							a(href='#', title='Demo App')
								img(src='images/logo.png', alt='Demo App')
					nav.global-navigation.navbar-default
						h2.hidden Global Navigation
						button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', aria-expanded='false', data-target='#navbar-collapse-1')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						mixin global-nav(value, title)
							li
								a(href='#', title=title)= value
						ul.collapse.navbar-collapse#navbar-collapse-1
							+global-nav('HOME', 'Home')
							+global-nav('ABOUT', 'About')
							+global-nav('PROJECTS', 'Projects')
							+global-nav('BLOG', 'Blog')
							+global-nav('CONTACT', 'Contact')
			<!--spotlight starts-->
			section.wrap-spotlight
				h2.hidden Spotlight 
				.container
					.row.wrap-spot-details
						.spot-image.col-md-6
							img(src='images/satellite.png', class='img-responsive')
						.spot-details.col-md-6
							h3 Spot Details Heading
							a(class='read-more', href='#') Read More
					section.spot-features-project
						h3 Featured Projects
						mixin main-project-list(value,title)
							li.col-md-3
								a(href='#')
									article
										h5.hidden=title
										img(src= value, alt=title)
						ul
							+main-project-list('images/project-image1.jpg', 'Project1')
							+main-project-list('images/project-image2.jpg', 'Project2')
							+main-project-list('images/project-image3.jpg', 'Project3')
							+main-project-list('images/project-image4.jpg', 'Project4')
			<!--our mission starts-->
			section.our-mission
				.container
					h2 Our Mission
					p lorem ispum
			<!--gallery starts-->
			.wrap-gallery
				section.featured-video.container
					h2.hidden Gallery
					.row
						section.col-sm-6
							h3 Featured Video
							a(href='#', class="video-link")
								img(src='images/mars-rover.jpg', alt='Video')
						section.col-sm-6
							h3 Latest Blog
							mixin blog-list(value,title,date)
								li
									a(href='#')
										article
											img(src= value, alt=title)
											h4=title
											span=date
											a(href='#') Read More
							ul
								+blog-list('images/blog1.jpg', 'Blog1', ' February 6, 2023')
								+blog-list('images/blog2.jpg', 'Blog2', ' February 6, 2023')
			<!--footer starts-->
			footer.wrap-footer
				.footer-top
					.container
						h2 Follow our mission on
						mixin social-links(className)
							li
								a(href='#', class=className)
						ul
							+social-links('facebook-link')
							+social-links('twitter-link')
							+social-links('googleplus-link')
							+social-links('pinterest-link')
